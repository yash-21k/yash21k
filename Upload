const waitForVideoAndClick = () => {
  const video = document.querySelector('video');
  const nextBtn = document.querySelector('button#submit');

  if (!video || !nextBtn) {
    console.log('Waiting for video or Next button...');
    return;
  }

  if (video.ended) {
    console.log('Video completed â†’ clicking NEXT');
    nextBtn.click();
    clearInterval(interval);
  }
};

const interval = setInterval(waitForVideoAndClick, 2000);