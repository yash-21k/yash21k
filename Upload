import java.util.regex.Pattern;
import java.util.regex.Matcher;

public class RfiStatusRegex {

    // ✅ Precompiled regex pattern (case-insensitive & flexible spacing)
    public static final Pattern RFI_IN_PROGRESS_PATTERN =
            Pattern.compile("(?i)^RFI\\s+In\\s+Progress\\s*\\(Awaiting\\s+response\\s+from\\s+RM\\s*/\\s*Clients\\)$");

    public static void main(String[] args) {
        String input = "RFI In Progress (Awaiting response from RM /Clients)";

        Matcher matcher = RFI_IN_PROGRESS_PATTERN.matcher(input);
        if (matcher.matches()) {
            System.out.println("✅ The string matches the pattern!");
        } else {
            System.out.println("❌ The string does NOT match the pattern.");
        }
    }
}