import com.fasterxml.jackson.annotation.JsonIgnoreType;
import com.fasterxml.jackson.databind.ObjectMapper;
import com.fasterxml.jackson.databind.SerializationFeature;

public class JsonUtil {

    public static String toJsonOnlyOwnFields(Object obj) throws Exception {

        ObjectMapper mapper = new ObjectMapper();
        mapper.enable(SerializationFeature.INDENT_OUTPUT);

        Class<?> runtimeClass = obj.getClass();
        Class<?> parentClass = runtimeClass.getSuperclass();

        if (parentClass != null && parentClass != Object.class) {
            mapper.addMixIn(parentClass, IgnoreTypeMixin.class);
        }

        return mapper.writeValueAsString(obj);
    }

    @JsonIgnoreType
    private static class IgnoreTypeMixin {
    }
}